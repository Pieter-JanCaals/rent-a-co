    <%=image_tag "rentaco.png", class: "brand"%>
  </a>

  <!-- displayed on laptops -->
  <div class="navbar-lewagon-actions d-none d-sm-flex">
    <% if user_signed_in? %>
      <% unless current_user.owner %>
        <%= link_to "Become an Owner", owner_path, class: "navbar-lewagon-link host-btn" %>
