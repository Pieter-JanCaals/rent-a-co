<!-- Pseudo code:

1- add div grid layout for pictures of animal
2- add name/type/description in that order (reviews eventually)
2- add div for containing Price/calendar (from...to...)/message/BOOK button that redirects to confirm booking page
 -->

 <div class="map" style="background-image: url('<%= cl_image_path @animal.photo %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="animal-show-card">
        <%= cl_image_tag(@animal.photo, :alt => "animal photo") %>
        <h1><%= @animal.name %></h1>
      </div>
      <div class="animal-show-card">
        <h3>A bit more about this animal...</h3>
        <p><%= @animal.description %></p>
    </div>
    <div class="animal-show-card">
      <h3>Price</h3>
      <div class="flex">
        <div class="flex ml-3">
          <i class="material-icons mr-2">$</i> <%= @animal.price %>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="animal-show-card">
        <h5>Book this animal!</h5>
        <%= simple_form_for [@animal, @booking], input_html: { id: :bookingForm }, remote: true do |f| %>
          <%= f.input :start_date, as: :string %>
          <%= f.input :end_date, as: :string %>
          <%= f.input :content, label: "Message", input_html: { id: :contentInput } %>
          <%= f.button :button, "Book", class: "add-btn", id: :submitBtn, data: {target: "#exampleModalCenter", toggle: "modal", dismiss: "modal" } %>
        <% end %>
        </div>
      </div>

      <div class="animal-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa fa-facebook-square fa-2x mr-2"></i>
            <i class="fa fa-twitter-square fa-2x mr-2"></i>
            <i class="fa fa-pinterest-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLongTitle"><strong>Booking Confrimation</strong></h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="row">
          <div class="col-md-4 ml-auto">
            <%= cl_image_tag(@animal.photo, :alt => "animal photo", width: 200) %>
          </div>
          <div class="col-md-6 ml-auto" style="margin-left:30px;" >
            <h2><%= @animal.name %></h2>
            <h3><%= @animal.species %></h3>
          </div>
        </div>
          <h5><h4><strong>About: </strong></h4> <%= @animal.description %></h5>
          <h5><strong>From: </strong><div id="startDate"></div></h5>
          <h5><strong>To: </strong><div id="endDate"></h5>
          <h5><strong>Price: </strong> <%= @animal.price %> $</h5>
      </div>

      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>-->
        <button id="submit" type="button" class="add-btn">Confirm</button>
      </div>
  </div>
</div>
