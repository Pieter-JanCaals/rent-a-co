<!-- Pseudo code:

1- button to add pictures and chosing primary picture
2- form to submit name/type/description/price
3_ Submit button that redirects to bookings/index -->

  <div class="container mt-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="animal-form">
          <h1 class="page_header">Add a new Animal</h1>
          <div class="mt-3">
            <%= form_for(@animal) do |f| %>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :species %>
                <%= f.text_field :species, class: 'form-control' %>
              </div>
               <div class="form-group">
                <%= f.label :photo %>
                <%= f.text_field :photo, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: 'form-control' %>
              </div>
              <div class="mt-3">
                <%= f.submit class: 'add-btn' %>
                <%= link_to 'Cancel', animals_path, class: 'remove-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



