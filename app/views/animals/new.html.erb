<!-- Pseudo code:

1- button to add pictures and chosing primary picture
2- form to submit name/type/description/price
3_ Submit button that redirects to bookings/index -->

  <div class="container mt-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="animal-form">
          <h1 class="page_header">Add a new Animal</h1>
          <div class="mt-3">
            <%= simple_form_for(@animal) do |f| %>
              <%= f.input :name, class: 'form-control' %>
              <%= f.input :species, class: 'form-control' %>
              <%= f.input :photo, class: 'form-control' %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.input :description, class: 'form-control' %>
              <%= f.input :price, class: 'form-control' %>
              <div class="mt-3">
                <%= f.submit class: 'add-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



